@foreach (var item in Model)
{
    if (item.name != null)
    {
        <div class="col-lg-4">
            <img class="img-thumbnail" src="@item.img" alt="Картинка товара" />
            <h2>Название: @item.name</h2>
            <a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@item.id">Купить</a>
            <p>Цена: @item.price.ToString("c")</p>
        </div>
    }
    else
    {
        <div class="col-lg-4">
            <p>Товаров не найдено</p>
        </div>
    }
}
