@model Phramacy.ViewModels.LoginModel

<div>
    <h1>Вход в кабинет администратора</h1>
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div  class="Login">
                <label asp-for="Name">Логин</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div  class="Password">
                <label asp-for="password">Пароль</label>
                <input asp-for="password" />
                <span asp-validation-for="password"></span>
            </div>
            <div>
                <input type="submit" name="name" value="Войти" />
            </div>
        </form>
    </div>
</div>
<style>
    .login input{
        width: 50px;
    }
</style>