@model Product

<div class="col-lg-4">
        <img class="img-thumbnail" src="@Model.img" alt="Картинка товара" />
        <h2>Название: @Model.name</h2>
        <a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Купить</a>
    <p>Цена: @Model.price.ToString("c")</p>
</div>