@model IEnumerable<Product>

@{ 
    ViewBag.Title = "Все товары";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th>Название</th>
        <th>Количество</th>
        <th class="text-right">Цена</th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.name</td>
            <td>@item.available</td>
            <td class="text-right">@item.price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-name="@item.name">Изменить</a>
                    <input type="hidden" name="name" value="@item.name" />
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавить товар</a>
    <a asp-action="RemoveShelfLive" class="btn btn-primary">Списать просроченные</a>
</div>