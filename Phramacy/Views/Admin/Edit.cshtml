@model Product
@{ 
    ViewBag.Title = "Изменение товара";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="name">Имя</label>
        <input asp-for="name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="shortDec">Описание</label>
        <input asp-for="shortDec" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="available">Количество</label>
        <input asp-for="available" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="img">Путь к картинкиы</label>
        <input asp-for="img" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="price">Цена</label>
        <input asp-for="price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsFavourite">Спецпредложения</label>
        <input asp-for="IsFavourite" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="shelf_life">Срок годности</label>
        <input asp-for="shelf_life" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Id-категории</label>
        <input asp-for="CategoryId" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>