@model Order

<div class="row">
    <h3>Оформление заказа</h3><br />
</div>
<div class="row">
    <div class="container">
        <div class="col-lg">
            <form asp-action="Checkout" method="post" class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <div class="col-md-5">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SurName"></label>
                    <div class="col-md-5">
                        <input asp-for="SurName" class="form-control" />
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="adress"></label>
                    <div class="col-md-5">
                        <input asp-for="adress" class="form-control" />
                        <span asp-validation-for="adress" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="phone"></label>
                    <div class="col-md-5">
                        <input asp-for="phone" class="form-control" />
                        <span asp-validation-for="phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="email"></label>
                    <div class="col-md-5">
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>
                <input class="btn btn-success" type="submit" value="Завершить заказ" />
            </form>
        </div>
    </div>
</div>